
@model SportsStore.Web.Models.ProductsListViewModel

@{
    ViewBag.Title = "所有商品";
}

@foreach (var p in Model.Products)
{
    <div>
        <h3>@p.Name</h3>
        @p.Description
        <h4>售价：@p.Price.ToString("c")</h4>
    </div>
}

<div>
    @Html.PageLinks(Model.PagingInfo, x => Url.Action("List", new
    {
        page = x
    }))
</div>
